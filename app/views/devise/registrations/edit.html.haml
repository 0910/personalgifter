%section.title
  %h1
    Mi Perfil

%section
  .col-md-6.col-md-offset-3

    = form_for(resource, as: resource_name, url: gifter_registration_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      .form-group
        = f.label :name, class: 'control-label'
        = f.text_field :name, autofocus: true, class: 'form-control'
      .form-group
        = f.label :email, class: 'control-label'
        = f.email_field :email, class: 'form-control'
      .form-group
        = f.label :password, 'Contraseña', class: 'control-label'
        = f.password_field :password, autocomplete: "off", class: 'form-control'
      .form-group
        = f.label :password_confirmation, 'Confirmar Contraseña', class: 'control-label'
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
      .form-group
        = f.label :genre, 'Genero', class: 'control-label'
        = f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: false}
      .form-group
        = f.label :interest_ids, 'Elegi tus intereses', class: 'control-label'
        = f.collection_select :interest_ids, Interest.all, :id, :name, {include_blank: false}, {:multiple => true}
      .form-group
        = f.submit "Update", class: 'btn btn-success form-control'


/javascript functions

:javascript
  $(function() {
    $('#gifter_genre_id').select2({
      theme: "bootstrap"
    });
    $('#gifter_interest_ids').multipleSelect();
  });
