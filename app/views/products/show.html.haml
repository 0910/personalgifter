%section.detail
	.container
		.col-md-12
			.row
				.col-sm-6.col-md-6
					.row.photos
						%ul.slider
							- if @product.images.empty?
								%li
									.photo{:style => "background-image: url(image-not-available.jpg)"}
							- else
								- @product.images.each do |image|
									%li
										.photo{:style => "background-image: url(#{image.file.url(:large)})"}
				.col-sm-6.col-md-6
					.row
						.col-md-12
							%h1
								#{@product.name}
					.row
						.col-md-12
							%h3
								#{@product.store.name}
					.row
						.col-md-12
							%p
								#{@product.description}
					%hr
					.row
						.col-md-12
							.row
								.col-sm-6.col-md-6
									%h2.pull-right
										$#{@product.price}
										%span.line
								.col-sm-6.col-md-6
									= link_to('COMPRAR', @product.link, class: 'btn btn-lavander btn-buy', :target => '_blank')

									
				%hr
%section.recomendations
	.col-md-12
		.row.title
			%h1
				Otros productos
			%p
				relacionados
		.row
			.container
				.row
					- @search.search_products.each do |c|
						.col-xs-6.col-sm-4.col-md-3
							= link_to(product_path(c.id)) do
								- if c.images.empty?
									.square{:style => "background-image: url(image-not-available.jpg)"}
										.over
								- else
									- c.images.each do |image|
										- if image.cover == true
											.square{:style => "background-image: url(#{image.file.url(:large)})"}
												.over

/javascript functions

:javascript
	$(function() {
		$('.photos .slider').bxSlider({
			auto: true,
			pause: 5000,
			useCSS:true,
			easing: 'cubic-bezier(.74,.14,.44,.71)',
				nextText: '→',
				prevText: '←'
		});
	});