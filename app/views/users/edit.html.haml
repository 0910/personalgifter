%section.title
	.profilepic{:style => "background-image: url(#{@user.image})"}
	%h1
		#{@user.name}
	%p
		de #{@user.location}
%section.detail
	.container
		.row						
			.col-md-6.col-md-offset-3
				%hr
				.row
					.col-md-12
						= form_for @user do |f|
							.row
								.col-md-6
									.row
										.col-md-12
											= f.label 'Genero'
									.row
										.col-md-12
											= f.collection_select :genre_id, Genre.all, :id, :name, {include_blank: false}
								.col-md-6
									.row
										.col-md-12
											= f.label 'Edad'
									.row
										.col-md-12
											= f.collection_select :target_id, Target.all, :id, :name, {include_blank: false}
							.row(style='margin-top:30px;')
								= f.label 'SeleccionÃ¡ las descripciones que te identifiquen'
							.row
								= f.collection_select :interest_ids, Interest.all, :id, :name, {include_blank: false}, {:multiple => true}
							%hr
							.row
								= f.submit "GUARDAR PERFIL", :class => 'btn btn-success'


