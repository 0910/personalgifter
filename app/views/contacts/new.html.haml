%section.title
	%h1 Contacto
	%p Envianos un mensaje con tu consulta
%section.detail
	- flash.each do |key, value|
		%h3.information
			= value
	.col-md-4.col-md-offset-4
		= form_for @contact do |f|
			.row
				.form-group
					= f.label :name, 'Nombre', class: 'control-label'
					= f.text_field :name, :required => true, class: 'form-control'
			.row
				.form-group
					= f.label :name, 'Email', class: 'control-label'
					= f.email_field :email, :required => true, class: 'form-control'

			.row
				.form-group
					= f.label :name, 'Mensaje', class: 'control-label'
					= f.text_area(:message, rows: 10, class: 'form-control')
			.row.hidden
				.form-group
					= f.text_field :nickname, :hint => 'Leave this field blank!'
			.row
				.form-group
					= f.submit "ENVIAR MENSAJE", class: 'btn btn-success'